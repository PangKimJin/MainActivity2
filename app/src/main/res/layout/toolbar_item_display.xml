<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0B2A33"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_arrow_back_white_24dp"
            android:id="@+id/toolbar_item_display_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="Edit Item"
            android:textColor="#FFFF"
            android:textSize="22sp" />

        <Button
            android:id="@+id/toolbar_item_display_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="260dp"
            android:layout_marginLeft="260dp"
            android:background="@drawable/ic_delete_white_24dp" />
        <Button
            android:id="@+id/toolbar_item_display_tick"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_tick_white_24dp" />
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>